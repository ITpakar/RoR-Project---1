<div class="container ">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well well-sm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html =>{:class => 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend class="text-center">Admin User Log in</legend>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Email*</label>
            <div class="col-sm-9">
              <%= f.email_field :email, :class=> 'form-control', autofocus: true, placeholder: "Email", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Password*</label>
            <div class="col-sm-9">
              <%= f.password_field :password, :class=> 'form-control', placeholder: "Password", required: true%>
            </div>
          </div>
          <% if false#devise_mapping.rememberable? -%>
          <div class="col-md-6 col-md-offset-3">
            <label class="control-label" for="remember_me">
              <%= f.check_box :remember_me %> Remember Me
            </label>
          </div>
          <% end -%>            
          
          <div class="form-group">
            <div class="col-md-12 text-right">
              <button type="submit" class="btn btn-default btn-lg btn-block">Log in</button>
            </div>
          </div>
        </fieldset>
        <% end -%>
      </div>
      <%#= render "users/shared/links" %>
    </div>
  </div>
</div>
