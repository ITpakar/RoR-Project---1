<div class="modal-header">
<h3>New Location</h3>
</div>
<%= form_tag(save_quick_add_location_path ,remote: true,:class=> "form-horizontal", :style=> "display:inline;")   do %>
  <div class="modal-body">
  <ul class="errors"></ul>

  <div class="form-group">
      <%= label_tag "name", nil,:class=> "col-md-4 control-label" %>
   <div class="col-md-8">
    <%= text_field_tag "name", nil,:class=> 'form-control' %>
  </div>
  </div>

    <div class="form-group">
      <%= label_tag "location", nil,:class=> "col-md-4 control-label" %>
   <div class="col-md-8">
    <%= select_tag "country_id", options_for_select(Country.pluck(:name, :id)),{:prompt=> "Please Select",:class=> 'form-control' }%>
  </div>
  </div>

  <div class="modal-footer">
    <%= submit_tag "Add Location", class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  </div>
<% end %>

