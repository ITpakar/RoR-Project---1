
<% if @squad_players.count > 0 then %>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Batting Style</th>
    <th>Bowling Style</th>
    <th>Role</th>
    <th>Selected</th>
    <th>Capt.</th>
    <th>WC</th>
    
  </tr>
  <% @squad_players.each do |p| %>     
    <% @team_player = @team.team_players.build %>    
    <%= f.fields_for :team_players, @team_player do |gsp| %>
    
      <tr>
      	<td><%= p.player.name %></td>
      	<td><%= p.player.country.name %></td>
      	<td><%= p.player.batting_style.titleize %></td>
      	<td><%= p.player.bowling_style %></td>
      	<td><%= p.player.role.titleize %><%= gsp.hidden_field :player_id, value: p.player_id %></td>
      	
      	<td><%= gsp.check_box :selected %></td>
      	<td><%= gsp.check_box :captain %></td>
      	<td><%= gsp.check_box :wicket_keeper %></td>
      	
      		    
      </tr>
    <% end %>
  <% end %>
  </table>
  <div class="pull-right">
    <%= f.submit "Save Squad", {class: "btn btn-primary btn-xs", :data => { :remote => true, params: {team_id: 0}} } %>
  </div>
<% end %>
