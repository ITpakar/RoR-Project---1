	<%= csrf_meta_tags %>
</head>
	<body>
		<%= render :template => 'layouts/header'%>
		<div class="container" style="margin-top: 50px;width: 90%">
			<%= render :template => 'layouts/error' %>
			<%= yield %>
		</div>
		<div id="global-modal" class="modal fade" data-keyboard="false" data-backdrop="static">
			<div class="modal-dialog">
