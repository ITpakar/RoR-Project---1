<%= form_for(@country, remote: true, html: {class: :country_form, class: "form-horizontal", style: "display:inline;" }) do |f| %>
  <div class="modal-body">
  <ul class="errors"></ul>

  <div class="form-group">
    <%= f.label :name, class: "col-md-3 control-label" %>
    <div class="col-md-9">
	  <%= f.text_field :name, class: 'form-control' %>
	</div>
  </div>
    <div class="form-group">
    <%= label_tag("Select Code", nil,:class=> "col-md-3 control-label" )%>
    <div class="col-md-9">
        
    <% for code in Code.all %>
    <div>
      <%= check_box_tag "country[code_ids][]", code.id, @country.codes.include?(code) %>
      <%= code.name %>
    </div>
    <% end %>

  </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save Country", class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  </div>
<% end %>
