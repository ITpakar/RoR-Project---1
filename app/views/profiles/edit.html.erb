<div class="container">
	<div class="row">
		<div class="col-md-6">
				<%= form_for([current_usr, current_usr.profile], :html=> {:class => 'form-horizontal top-margin'}) do |f| -%>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">First Name*</label>
					<div class="col-sm-8">
						<%= f.text_field :firstname, :class=> 'form-control', placeholder: "First Name", required: true%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Last Name*</label>
					<div class="col-sm-8">
						<%= f.text_field :lastname, :class=> 'form-control', placeholder: "Last Name", required: true%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Screen Name*</label>
					<div class="col-sm-8">
						<%= f.text_field :screenname, :class=> 'form-control', placeholder: "Screen Name", required: true%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Phone Number*</label>
					<div class="col-sm-8">
						<%= f.text_field :phone_number, :class=> 'form-control', placeholder: "Phone Number", required: true%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Address*</label>
					<div class="col-sm-8">
						<%= f.text_field :address, :class=> 'form-control', placeholder: "Address", required: true%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">FB Profile link</label>
					<div class="col-sm-8">
						<%= f.text_field :fb_link, :class=> 'form-control', placeholder: "FB Profile link"%>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Twitter Profile link</label>
					<div class="col-sm-8">
						<%= f.text_field :twitter_link, :class=> 'form-control', placeholder: "Twitter Profile link"%>
					</div>
				</div>
				
				<div class="form-group"></div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10 text-right">
						<button type="submit" class="btn btn-default">Update</button>
					</div>
				</div>
			<% end -%>
		</div>

		<div class="col-md-6">
			<%= form_for(current_usr, url: registration_path(current_usr), html: { method: :put, class: "form-horizontal top-margin" }) do |f| %>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Email*</label>
					<div class="col-sm-8">
						<%= f.email_field :email, autocomplete: "off", placeholder: "Current Password", class: "form-control", required: true, readonly: true %>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Current Password*</label>
					<div class="col-sm-8">
						<%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: "form-control", required: true %>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">New Password*</label>
					<div class="col-sm-8">
						<%= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: "form-control", required: true %>
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-sm-4 control-label">Password Confirmation*</label>
					<div class="col-sm-8">
						 <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control", required: true %>
					</div>
				</div>

				<div class="form-group"></div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10 text-right">
						<button type="submit" class="btn btn-default">Update Password</button>
					</div>
				</div>
			<% end -%>
		</div>

	</div>
</div>

