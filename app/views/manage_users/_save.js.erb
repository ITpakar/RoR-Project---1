$("ul.errors").html("");
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>  
  $('#manage-users-table').DataTable().ajax.reload();
  $("#global-modal").modal("hide")
<% end %>