<% if @squad_players.count > 0 then %>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Batting Style</th>
    <th>Bowling Style</th>
    <th>Role</th>
    <th>Selected</th>
    <th>Capt.</th>
    <th>WC</th>
    <th>Operations</th>
  </tr>
  <% @squad_players.each do |p| %>  
    <% @game_squad = @game.game_team_1_squads.build %>
    <%= f.fields_for :game_team_1_squads, @game_squad do |gsp| %>
      <%row_id = "row_#{p.id}"%>
      <%#@country_id = p.player.country.id%>
      <tr id = "<%=row_id%>">
      	<td><%= p.player.name %></td>
      	<td><%= p.player.country.name %></td>
      	<td><%= p.player.batting_style.titleize %></td>
      	<td><%= p.player.bowling_style %></td>
      	<td><%= p.player.role.titleize %><%= gsp.hidden_field :player_id, value: p.player_id %></td>
      	
      	<td><%= gsp.check_box :selected %></td>
      	<td><%= gsp.check_box :captain %></td>
      	<td><%= gsp.check_box :wicket_keeper %></td>
      	<!-- <td><%#= link_to "Remove",remove_player_path(:squad_player_id => p.id) %></td> -->
        <td>
           <%= link_to("Remove", remove_player_path(:squad_player_id => p.id,:squad =>"squad_1"), {class: "btn btn-danger btn-xs", id: 'remove_link', :data => { :remote => true}}) %>
        </td>
            
      </tr>
    <% end %>
  <% end %>
  </table>

  </div>
   <div class="pull-right">
    <%= link_to("Save Squad", squad_load_2_path(), {class: "btn btn-primary btn-xs", id: 'team_2_squad', onclick: 'load_squad(2);', :data => { :remote => true, params: {team_id: 0}} }) %>
  </div>

  
 
<% end %>



  <div class="pull-right">
    <%= link_to("Add New Player", quick_add_player_path(), {class: "btn btn-primary btn-xs", id: 'team_2_squad', :data => { :remote => true, params: {type: 1}} }) %>
  </div>
  <div class="pull-right">
    <%= link_to("Add Player from Database", squad_load_2_path(), {class: "btn btn-primary btn-xs", id: 'team_2_squad', :data => { :remote => true, params: {team_id: 0}} }) %>
  </div>

<script>
$( document ).ready(function() {
 $('#remove_link').click(function(){
    $('#remove_link').parents('tr').hide();
    return 0;
  });
 });

</script>