<h3>Players</h3>
<div class="col-md-12">
  <div class="panel panel-inverse">
    <div class="panel-body">    
      <p><%= link_to "New Player", new_player_path, remote: true, class: "btn btn-xs btn-primary" %></p>
      <table id="players-table" data-source="<%= players_path(format: :json) %>" class="table table-striped table-bordered dataTable no-footer" width="100%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Batting style</th>
            <th>Bowling style</th>
            <th>Role</th>
            <th>Date of Birth</th>
		    <th>Operations</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>	
    </div>
  </div>
</div>