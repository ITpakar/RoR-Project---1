<div class="modal-header">
<h3>Login</h3>
</div>
<h3 style="color:red;"><%= flash[:notice]%></h3></br>
<%= form_tag(sessions_path,:class=> "form-horizontal", :style=> "display:inline;")   do %>
  <div class="modal-body">
  <ul class="errors"></ul>

  <div class="form-group">
      <%= label_tag "Email", nil,:class=> "col-md-4 control-label" %>
   <div class="col-md-8">
	  <%= text_field_tag "email", nil,:class=> 'form-control' %>
  </div>
  </div>

    <div class="form-group">
      <%= label_tag "password", nil,:class=> "col-md-4 control-label" %>
   <div class="col-md-8">
	  <%= password_field_tag "password", nil,:class=> 'form-control' %>
  </div>
  </div>

  <div class="modal-footer">
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
