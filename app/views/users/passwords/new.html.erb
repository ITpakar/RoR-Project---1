<div class="container ">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="well well-sm">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal' }) do |f| %>
				<%= devise_error_messages! %>
				<fieldset>
					<legend class="text-center">Forgot your password?</legend>
					<div class="form-group">
						<label for="" class="col-sm-3 control-label">Email*</label>
						<div class="col-sm-9">
							<%= f.email_field :email, :class=> 'form-control', autofocus: true, placeholder: "Email", required: true%>
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-12 text-right">
							<button type="submit" class="btn btn-default btn-lg btn-block">Send me reset password instructions</button>
						</div>
					</div>
				</fieldset>
				<% end -%>
			</div>
			<%= render "users/shared/links" %>
		</div>
	</div>
</div>