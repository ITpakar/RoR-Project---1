<h2>Standard User Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => 'form-horizontal') do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>



  <%= f.fields_for :profile do |p| %>
    <div class="form-group">
      <%= p.label :firstname, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= p.text_field :firstname, class: 'form-control', :required => true %>
      </div>
    </div>

    <div class="form-group">
      <%= p.label :lastname, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= p.text_field :lastname, class: 'form-control', :required => true %>
      </div>
    </div>

    <div class="form-group">
      <%= p.label :screenname, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= p.text_field :screenname, class: 'form-control', :required => true %>
      </div>
    </div>

    <div class="form-group">
      <%= p.label :phone_number, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= p.text_field :phone_number, class: 'form-control', :required => true %>
      </div>
    </div>
    <div class="form-group">
      <%= p.label :address, class: "col-md-3 control-label" %>
      <div class="col-md-9">
        <%= p.text_field :address, class: 'form-control', :required => true %>
      </div>
    </div>
  <% end %>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
