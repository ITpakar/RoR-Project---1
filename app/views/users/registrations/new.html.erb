<div class="container ">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well well-sm">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class => 'form-horizontal'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend class="text-center">Sign Up</legend>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Email*</label>
            <div class="col-sm-9">
              <%= f.email_field :email, :class=> 'form-control', placeholder: "Email", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Password*</label>
            <div class="col-sm-9">
              <%= f.password_field :password, :class=> 'form-control', placeholder: "Password", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Password Confirmation*</label>
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, :class=> 'form-control', placeholder: "Password Confirmation", required: true%>
            </div>
          </div>

          <%= f.fields_for resource.build_profile do |p| %>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">First Name*</label>
            <div class="col-sm-9">
              <%= p.text_field :firstname, :class=> 'form-control', placeholder: "First Name", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Last Name*</label>
            <div class="col-sm-9">
              <%= p.text_field :lastname, :class=> 'form-control', placeholder: "Last Name", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Screen Name*</label>
            <div class="col-sm-9">
              <%= p.text_field :screenname, :class=> 'form-control', placeholder: "Screen Name", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Phone Number*</label>
            <div class="col-sm-9">
              <%= p.text_field :phone_number, :class=> 'form-control', placeholder: "Phone Number", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Address*</label>
            <div class="col-sm-9">
              <%= p.text_field :address, :class=> 'form-control', placeholder: "Address", required: true%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">FB Profile link</label>
            <div class="col-sm-9">
              <%= p.text_field :fb_link, :class=> 'form-control', placeholder: "FB Profile link"%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Twitter Profile link</label>
            <div class="col-sm-9">
              <%= p.text_field :twitter_link, :class=> 'form-control', placeholder: "Twitter Profile link"%>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12 text-right">
              <button type="submit" class="btn btn-default btn-lg btn-block">Sign up</button>
            </div>
          </div>
          <% end -%>
        </fieldset>
        <% end -%>
      </div>
    </div>
  </div>
</div>
