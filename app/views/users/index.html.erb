<h3>Std Users</h3>
<div class="col-md-12">
  <div class="panel panel-inverse">
    <div class="panel-body">    
      <p><%= link_to "New Player", new_user_path, remote: true, class: "btn btn-xs btn-primary" if can? :new, User %></p>
      <table id="users-table" data-source="<%= users_path(format: :json) %>" class="table table-striped table-bordered dataTable no-footer" width="100%">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Screen Name</th>
            <th>Email</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>