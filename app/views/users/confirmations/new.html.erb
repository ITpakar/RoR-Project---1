<div class="container ">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well well-sm">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class => 'form-horizontal'}) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend class="text-center">Resend confirmation instructions</legend>
          <div class="form-group">
            <label for="" class="col-sm-3 control-label">Email*</label>
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), :class=> 'form-control', placeholder: "Email", required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-9 col-md-offset-3 text-right">
              <button type="submit" class="btn btn-default btn-lg btn-block">Resend confirmation instructions</button>
            </div>
          </div>
        </fieldset>
        <% end -%>
      </div>
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
