<%= form_for(@umpire, remote: true, html: {class: :umpire_form, class: "form-horizontal", style: "display:inline;" }) do |f| %>
  <div class="modal-body">
  <ul class="errors"></ul>

  <div class="form-group">
    <%= f.label :name, class: "col-md-3 control-label" %>
    <div class="col-md-9">
	  <%= f.text_field :name, class: 'form-control' %>
	</div>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "col-md-3 control-label" %>
    <div class="col-md-9">
	  <%= f.select :country_id, options_for_select(Country.all.map{|c| [c.name, c.id]}), { prompt: true }, { class: 'form-control' }%>
	</div>
  </div>

  <div class="modal-footer">
    <%= f.submit "Save Umpire", class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  </div>
<% end %>